{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "cargo",
        "subcommand": "build",
        "problemMatcher": [
          "$rustc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "options": {
          "env": {
            "RUST_BACKTRACE": "1"
          }
        }
      },
      {
        "type": "cargo",
        "subcommand": "test",
        "problemMatcher": [
          "$rustc"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "options": {
          "env": {
            "RUST_BACKTRACE": "1"
          }
        }
      },
      {
        "label": "cargo build --all-targets",
        "type": "shell",
        "command": "cargo",
        "args": ["build", "--all-targets"],
        "problemMatcher": [
          "$rustc"
        ],
        "group": "build",
        "options": {
          "env": {
            "RUST_BACKTRACE": "1"
          }
        }
      }
    ]
}
